<h1>Edit Playlist</h1>

<%= form_for(@playlist) do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<div>
  <% @songs.each do |song| %>
  <%= check_box_tag(:songs_ids, song.id, false, :name => 'playlist[song_ids][]', id: "song-#{song.id}") %>
  <%= song.title %>
  <% end %>
</div>
<%= f.submit %>
<% end %>
